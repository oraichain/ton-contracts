{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["wrappers/**/*.ts", "package.json", ".npmrc"],
    "exclude": ["wrappers/*.compile.ts"]
}
