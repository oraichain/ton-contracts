#include "common.fc";

(int) pubkey::encode_length(slice pub) {
    if (pub.slice_empty?() == -1) {
        return 1;
    }
    return 2 + (pub.slice_bits() >> 3);
}

;; notice: only receive pubkey value
slice pubkey::encode(slice pub) {
    int len = pub.slice_bits() >> 3;
    return begin_cell()
            .store_uint(0x0a, 8)
            .store_uint(len, 8)
            .store_slice(pub)
            .end_cell()
            .begin_parse();
}